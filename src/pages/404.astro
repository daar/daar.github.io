---
import Layout from "../layouts/Layout.astro";
import Logo from "../components/Logo.astro";

export const prerender = true;
---

<Layout>
  <!-- Full-height container ensuring centering -->
  <div class="flex items-center justify-center h-screen bg-gray-900">
    <!-- 404 Card with responsive width -->
    <div class="bg-white p-8 w-full sm:w-11/12 md:w-1/2 text-center space-y-6">
      
      <!-- DB Logo -->
      <Logo />

      <!-- 404 Text -->
      <h1 class="text-9xl font-extrabold text-gray-500">404</h1>
      <p class="text-xl font-semibold text-gray-700 uppercase tracking-wider opacity-70">
        Page Not Found
      </p>
      <p class="text-gray-500">
        The page you're looking for doesn't exist or has been moved.
      </p>

      <!-- Home Button -->
      <a
        href="/"
        class="mt-6 inline-block px-6 py-3 text-lg font-bold text-black bg-gray-900 hover:bg-gray-700 transition-all duration-300"
      >
        Go Home
      </a>
    </div>
  </div>
</Layout>
